{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "rootDirs": ["src", "src/tests"],
    "allowJs": true,
    "lib": ["es2019"]
  },
  "include": ["src", "config", "./src/tests"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
